class Color{
  //I just used this so I didn't have to write out the RGB values for a color over and over again
  private int r;
  private int g;
  private int b;
  
  Color(int r, int g, int b)
  {
    this.r = r;
    this.g = g;
    this.b = b;
  }
  
  public int getR()
  {
    return r;
  }
  
  public int getG()
  {
    return g;
  }
  
  public int getB()
  {
    return b;
  }
}
